<div class="container">
  <div class="row">
    <%= form_for [mealtime_prayer.week, mealtime_prayer] do |f| %>
      <div class="form-group">
        <%= f.text_area :mealtime_prayer, class: 'form-control edit-mealtime_prayer' %>
      </div>

      <div class="text-right">
        <%= f.button class: 'btn btn-primary', title: "Save" do %>
          <i class="fa fa-floppy-o fa-lg"></i>
        <% end %>

        <%= link_to [mealtime_prayer.week, mealtime_prayer], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', title: "Delete" do %>
          <i class="fa fa-remove fa-lg"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
