<div class="container">
  <div class="row">
    <%= form_for [memory_verse.week, memory_verse] do |f| %>
      <div class="form-group">
        <%= f.text_area :verse_address, class: 'form-control edit-memory_verse' %>
        <%= f.text_area :text, class: 'form-control edit-memory_verse' %>
      </div>

      <div class="text-right">
        <%= f.button class: 'btn btn-primary', title: "Save" do %>
          <i class="fa fa-floppy-o fa-lg"></i>
        <% end %>

        <%= link_to [memory_verse.week, memory_verse], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', title: "Delete" do  %>
          <i class="fa fa-remove fa-lg"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
