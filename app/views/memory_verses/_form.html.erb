<%= form_for([@week, @week.memory_verses.build]) do |f| %>
  <div class="form-group">  
    <%= f.label :verse_address %>
    <%= f.text_field :verse_address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :text %>
    <%= f.text_area :text, class: "form-control" %>
  </div>

  <div class="action text-right">
    <%= f.button class: 'btn btn-success', title: 'Add' do %>
      <i class="fa fa-plus fa-lg"></i>
    <% end %>
  </div>
<% end %>
