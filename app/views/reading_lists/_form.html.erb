<div class="container">
<%= form_for([@week, @week.reading_lists.build]) do |f| %>
  <div class="form-group">
    <p><%= f.label :"Add a day:" %></p>
    <%= f.date_select :day, :ignore_time => true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :verse %>
    <%= f.text_field :verse, class: "form-control" %>
  </div>  
  <div class="form-group">  
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit :"Add to reading list" %>
  </div>
<% end %>
</div>
<br>
