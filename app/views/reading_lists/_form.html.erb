<%= form_for([@week, @week.reading_lists.build]) do |f| %>
  <div class="form-group">
    <div class="form-group">
      <p><%= f.label :"Add a day:" %></p>
      <%= f.date_select :day, :ignore_time => true, class: "form-control" %>
    </div>

    <div class="form-group">  
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :verse %>
      <%= f.text_field :verse, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :scripture_text %>
      <%= f.text_area :scripture_text, class: "form-control" %>
    </div> 
  
    <div class="action text-right">
      <%= f.button class: 'btn btn-success', title: 'Add' do %>
        <i class="fa fa-plus fa-lg"></i>
      <% end %>
    </div>
  </div>
<% end %>
