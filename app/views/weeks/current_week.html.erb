<div class="new-weeks-container">
  <div class="d-flex justify-content-center">
    <h1>Current Week</h1>
  </div>
  <br>
  
  <div class="d-flex justify-content-center">
    <div class="container" style="width: 50%; text-align: center;">
    <p>This is the week that is currently published for users to view.</p>
    </div>
  </div>
  <div class="container-fluid" style="width: 75%;" >
    <table class="table table-striped table-responsive" style="background-color: white;">
      <tr>
        <th>Week Name</th>
        <th>Publishing Dates</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% @weeks.each do |week| %>
      <tr>
      <td><%= week.name %></td>
      <td><%= week.published_on.strftime("%e %B") %> - <%= week.archived_on.strftime("%e %B, %Y") %></td>
      <td><%= link_to 'Manage Week', manage_weeks_current_week_path(week) %></td>
        <td><%= link_to 'User View', user_view_current_week_path(week) %></td>
        <td><%= button_to 'Remove from Queue', remove_from_queue_week_path(week), class: "btn btn-danger" %></td>
      </tr>
      <% end %>
    </table>
    <br>
  </div>
</div>