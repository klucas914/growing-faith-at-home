<div class="new-weeks-container">
  <div class="d-flex justify-content-center">
    <h1>New Weeks</h1>
  </div>
  <br>
  <hr>
  <div class="d-flex justify-content-center">
      <%= render 'form' %>
  </div>
  <br>
  <hr>
  <div class="d-flex justify-content-center">
    <div class="container" style="width: 50%; text-align: center;">
    <p>These weeks have not been added to the queue. To move the new weeks into the queue, finish adding content by going to "Manage Week" and then press "Add to Queue".</p>
    </div>
  </div>
  <div class="container-fluid" style="width: 75%;" >
    <table class="table table-striped table-responsive" style="background-color: white;">
      <tr>
        <th>Week Name</th>
        <th>Publishing Dates</th>
        <th>Season</th>
        <th>Week Complete?</th>
        <th></th>
        <th></th>
        <!--<th></th>-->
        <th></th>
      </tr>
      <% @weeks.each do |week| %>
      <tr>
	      <td><%= week.name %></td>
        <td><%= week.published_on.strftime("%e %B") %> - <%= week.archived_on.strftime("%e %B, %Y") %></td>
        <td><%= week.season.church_season %></td>
        <td></td>
	      <td><%= link_to 'Manage Week', week_path(week) %></td>
        <td><%= link_to 'User View', mobile_view_week_path(week) %></td>
	      <!--<td><%= link_to 'Delete', week_path(week), method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        <td><%= button_to 'Add to Queue', add_to_queue_week_path(week), class: "btn btn-success" %></td>
      </tr>
      <% end %>
    </table>
    <br>
  </div>
</div>