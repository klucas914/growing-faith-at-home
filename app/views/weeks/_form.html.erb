<%= form_for @week do |f| %>
 
  <% if @week.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@week.errors.count, "error") %> prohibited
        this week from being saved:
      </h2>
      <ul>
        <% @week.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 <div class="form-inline">
  <div class="form-group">
    <%= f.label :Week_Name %> 
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :season %>
    <%= f.select :season_id, options_for_select(@seasons.collect{ |a| [a.church_season, a.id]}), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :publish_on %><br>
    <%= f.date_select :published_on, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :archive_on %><br>
    <%= f.date_select :archived_on, class: "form-control" %>
  </div>
  <div class="action">
    <%= f.submit  class: "btn btn-primary"%>
  </div>
 </div>
<% end %>
